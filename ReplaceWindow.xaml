<Window x:Class="WPFNotebook.ReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заменить" Height="200" Width="400">
    <Grid>
        <Label Content="Найти:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="findTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,10,0,0" Width="300"/>
        <Label Content="Заменить на:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <TextBox Name="replaceTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,40,0,0" Width="260"/>
        <Button Content="Заменить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0" Width="100" Click="ReplaceButton_Click"/>
        <Button Content="Заменить всё" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,80,0,0" Width="100" Click="ReplaceAllButton_Click"/>
    </Grid>
</Window>
